<Window x:Class="Exam_TOP_Academy.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:resource="clr-namespace:Exam_TOP_Academy.Properties"
        Height="1000" Width="1600" WindowStartupLocation="CenterOwner" WindowStyle="None" ResizeMode="NoResize">

    <Window.Background>
        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
            <GradientStop Color="#2f285c" Offset="0.2"/>
            <GradientStop Color="#3f367c" Offset="0.5"/>
            <GradientStop Color="#50449c" Offset="1.4"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                <RadioButton x:Name="MainButton" Style="{StaticResource MainWindowButtonStyle}" Content="ГЛАВНАЯ" Width="250" FontWeight="DemiBold"/>
                <RadioButton x:Name="BookkeepingButton" Style="{StaticResource MainWindowButtonStyle}" Content="КНИЖНЫЙ УЧЕТ" Width="350" FontWeight="DemiBold"/>
            </StackPanel>

            <ContentControl Grid.Row="1" BorderBrush="Black" BorderThickness="1">
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=MainButton}" Value="True">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="220"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0" Name="FilterGridPrice">
                                                <TextBlock Text="Цена" FontSize="14" Foreground="White" Margin="10,0,0,0"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Grid Grid.Column="0">
                                                        <TextBox 
                                                            Style="{StaticResource TextBox}" Margin="10,30,0,0" 
                                                            VerticalAlignment="Top" HorizontalAlignment="Left"
                                                            Text="{Binding BeginRangePrice, UpdateSourceTrigger=PropertyChanged}" 
                                                            Height="25" Width="90" Foreground="Black">
                                                        </TextBox>
                                                    </Grid>
                                                    <Grid Grid.Column="1">
                                                        <TextBox 
                                                            Style="{StaticResource TextBox}" Margin="10,30,0,0" 
                                                            VerticalAlignment="Top" HorizontalAlignment="Left"
                                                            Text="{Binding EndRangePrice, UpdateSourceTrigger=PropertyChanged}" 
                                                            Height="25" Width="90" Foreground="Black">
                                                        </TextBox>
                                                    </Grid>
                                                </Grid>
                                            </Grid>

                                            <Grid Grid.Column="0" Name="FilterGridPublisherYear" Margin="0,90,0,0">
                                                <TextBlock Text="Год публикации" FontSize="14" Foreground="White" Margin="10,0,0,0"/>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="100"/>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Grid Grid.Column="0">
                                                        <TextBox 
                                                            Style="{StaticResource TextBox}" Margin="10,30,0,0" 
                                                            VerticalAlignment="Top" HorizontalAlignment="Left"
                                                            Text="{Binding SearchFormPublisherBeginYear, UpdateSourceTrigger=PropertyChanged}" 
                                                            Height="25" Width="90" Foreground="Black"/>
                                                    </Grid>
                                                    <Grid Grid.Column="1">
                                                        <TextBox 
                                                            Style="{StaticResource TextBox}" Margin="10,30,0,0" 
                                                            VerticalAlignment="Top" HorizontalAlignment="Left"
                                                            Text="{Binding SearchFormPublisheEndYear, UpdateSourceTrigger=PropertyChanged}" 
                                                            Height="25" Width="90" Foreground="Black">
                                                        </TextBox>
                                                    </Grid>
                                                </Grid>
                                            </Grid>
                                            <Grid Grid.Column="0" Name="FilterGridStatus" Margin="0,180,0,0">
                                                <TextBlock Text="Статус" FontSize="14" Foreground="White" Margin="10,0,0,0"/>
                                                <Grid>
                                                    <ToggleButton Name="StatusNewBook" Grid.Row="2" Height="30" Width="140" 
                                                                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,25,0,0" 
                                                                  Content="Новинки" Foreground="#a69fab" FontSize="12" Style="{StaticResource CustomToggleButtonStyle}">
                                                    </ToggleButton>
                                                    <ToggleButton Name="StatusBestsellers" Grid.Row="2" Height="30" Width="140" 
                                                                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0" 
                                                                  Content="Бестселлеры" Foreground="#a69fab" FontSize="12" Style="{StaticResource CustomToggleButtonStyle}">
                                                    </ToggleButton>
                                                    <ToggleButton Name="StatusPreOrder" Grid.Row="2" Height="30" Width="140" 
                                                                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,95,0,0" 
                                                                  Content="Предзаказ" Foreground="#a69fab" FontSize="12" Style="{StaticResource CustomToggleButtonStyle}">
                                                    </ToggleButton>
                                                </Grid>
                                            </Grid>
                                            <Grid Grid.Column="0" Margin="0,330,0,0">
                                                <TextBlock Text="Издательства" FontSize="14" Foreground="White" Margin="10,0,0,0"/>
                                                <Grid>
                                                    <TextBox 
                                                        Style="{StaticResource TextBox}" Margin="10,30,0,0" 
                                                        VerticalAlignment="Top" HorizontalAlignment="Left"
                                                        Text="{Binding SearchFormPublisher, UpdateSourceTrigger=PropertyChanged}" 
                                                        Height="25" Width="160" Foreground="Black">
                                                    </TextBox>
                                                    <ToggleButton x:Name="PublisherOne" Grid.Row="2" Height="30" Width="140" 
                                                                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0" 
                                                                  Content="{Binding BestPublisherOne}" Foreground="#a69fab" FontSize="12" 
                                                                  Style="{StaticResource CustomToggleButtonStyle}">
                                                    </ToggleButton>
                                                    <ToggleButton Name="PublisherTwo" Grid.Row="2" Height="30" Width="140" 
                                                                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,95,0,0" 
                                                                  Content="{Binding BestPublisherTwo}" Foreground="#a69fab" FontSize="12" 
                                                                  Style="{StaticResource CustomToggleButtonStyle}">
                                                    </ToggleButton>
                                                    <ToggleButton Name="PublisherThree" Grid.Row="2" Height="30" Width="140" 
                                                                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" 
                                                                  Content="{Binding BestPublisherThree}" Foreground="#a69fab" FontSize="12" 
                                                                  Style="{StaticResource CustomToggleButtonStyle}">
                                                    </ToggleButton>
                                                    <ToggleButton Name="PublisherFour" Grid.Row="2" Height="30" Width="140" 
                                                                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,165,0,0" 
                                                                  Content="{Binding BestPublisherFour}" Foreground="#a69fab" FontSize="12" 
                                                                  Style="{StaticResource CustomToggleButtonStyle}">
                                                    </ToggleButton>
                                                    <ToggleButton Name="PublisherFive" Grid.Row="2" Height="30" Width="140" 
                                                                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,200,0,0" 
                                                                  Content="{Binding BestPublisherFive}" Foreground="#a69fab" FontSize="12" 
                                                                  Style="{StaticResource CustomToggleButtonStyle}">
                                                    </ToggleButton>
                                                    <ToggleButton Name="PublisherSix" Grid.Row="2" Height="30" Width="140" 
                                                                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,235,0,0" 
                                                                  Content="{Binding BestPublisherSix}" Foreground="#a69fab" FontSize="12" 
                                                                  Style="{StaticResource CustomToggleButtonStyle}">
                                                    </ToggleButton>
                                                </Grid>
                                            </Grid>

                                            <Grid Grid.Column="0" Name="FilterAuthor" Margin="0,605,0,0">
                                                <TextBlock Text="Авторы" FontSize="14" Foreground="White" Margin="10,0,0,0"/>
                                                <Grid>
                                                    <TextBox
                                                        Style="{StaticResource TextBox}" Margin="10,30,0,0"
                                                        Text="{Binding SearchFormAuthor, UpdateSourceTrigger=PropertyChanged}"
                                                        VerticalAlignment="Top" HorizontalAlignment="Left" 
                                                        Width="160" Height="25" Foreground="Black">
                                                    </TextBox>
                                                    <ToggleButton Name="AuthorOne" Grid.Row="2" Height="30" Width="140" 
                                                                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,60,0,0" 
                                                                  Content="{Binding BestAuthorOne}" Foreground="#a69fab" FontSize="12" 
                                                                  Style="{StaticResource CustomToggleButtonStyle}">
                                                    </ToggleButton>
                                                    <ToggleButton Name="AuthorTwo" Grid.Row="2" Height="30" Width="140" 
                                                                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,95,0,0" 
                                                                  Content="{Binding BestAuthorTwo}" Foreground="#a69fab" FontSize="12" 
                                                                  Style="{StaticResource CustomToggleButtonStyle}">
                                                    </ToggleButton>
                                                    <ToggleButton Name="AuthorThree" Grid.Row="2" Height="30" Width="140" 
                                                                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,130,0,0" 
                                                                  Content="{Binding BestAuthorThree}" Foreground="#a69fab" FontSize="12" 
                                                                  Style="{StaticResource CustomToggleButtonStyle}">
                                                    </ToggleButton>
                                                    <ToggleButton Name="AuthorFour" Grid.Row="2" Height="30" Width="140" 
                                                                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,165,0,0" 
                                                                  Content="{Binding BestAuthorFour}" Foreground="#a69fab" FontSize="12" 
                                                                  Style="{StaticResource CustomToggleButtonStyle}">
                                                    </ToggleButton>
                                                    <ToggleButton Name="AuthorFive" Grid.Row="2" Height="30" Width="140" 
                                                                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,200,0,0" 
                                                                  Content="{Binding BestAuthorFive}" Foreground="#a69fab" FontSize="12" 
                                                                  Style="{StaticResource CustomToggleButtonStyle}">
                                                    </ToggleButton>
                                                    <ToggleButton Name="AuthorSix" Grid.Row="2" Height="30" Width="140" 
                                                                  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,235,0,0" 
                                                                  Content="{Binding BestAuthorFive}" Foreground="#a69fab" FontSize="12" 
                                                                  Style="{StaticResource CustomToggleButtonStyle}">
                                                    </ToggleButton>
                                                </Grid>
                                            </Grid>

                                            <Grid Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="120"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Grid Grid.Row="0" Name="SearchGrid">
                                                    <TextBox 
                                                        Style="{StaticResource TextBox}" Margin="80,20,0,0" 
                                                        Text="{Binding SearchForm, UpdateSourceTrigger=PropertyChanged}"
                                                        VerticalAlignment="Top" HorizontalAlignment="Left" 
                                                        Width="600" Height="35" Foreground="Black">
                                                    </TextBox>
                                                </Grid>

                                                <Grid Name="FilterRadioButton">
                                                    <RadioButton Margin="80,70,0,0" Content="Название книги" Foreground="White"/>
                                                    <RadioButton Margin="200,70,0,0" Content="Жанр" Foreground="White"/>
                                                    <RadioButton Margin="260,70,0,0" Content="Автор" Foreground="White"/>
                                                </Grid>
                                                <Grid Grid.Row="1" Name="DataGrid">
                                                    <!-- Вывод информации с поиска/фильтров -->
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=BookkeepingButton}" Value="True">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Grid>
                                            <!-- Grid для книжного учета -->
                                            <TextBlock Text="ЭТО КНИЖНЫЙ УЧЕТ" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        </Grid>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Grid>
    </Grid>
</Window>
